#!/bin/bash

genomeDir=/home/CBSB_UofK.RNA_seq_assesment/Genome/Index.Raw_2Pass

mkdir $genomeDir


module load STAR


STAR --runMode genomeGenerate --genomeDir $genomeDir --genomeFastaFiles /home/CBSB_UofK.RNA_seq_assesment/Genome/Homo_sapiens_assembly38.fasta \
     --sjdbFileChrStartEnd /home/CBSB_UofK.RNA_seq_assesment/Alignment/1st_Pass/SJ.all --runThreadN 3 --sjdbGTFfile /home/CBSB_UofK.RNA_seq_assesment/Genome/gencode.v27.chr_patch_hapl_scaff.annotation.gtf

echo "Done!" 


